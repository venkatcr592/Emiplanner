<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000835"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:padding="15dp"
        android:text="Enter the Domain "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="6dp"
        android:text="Domain*"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <Spinner
        android:id="@+id/spinner_domain"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/textView_domain"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_sub_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_domain"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="6dp"
        android:text="Sub Domain*"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinner_sub_domain"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/textView_sub_domain"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_sub_domain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF5722"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Next"
        android:textAlignment="center"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:text="History"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btnRetrieveLoans"/>
    <ImageButton
        android:id="@+id/btnRetrieveLoans"
        android:layout_width="60dp"
        android:layout_height="60sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FF5722"
        android:padding="2sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="History"
        android:src="@drawable/baseline_history_24"
        android:textAlignment="center" />


</RelativeLayout>